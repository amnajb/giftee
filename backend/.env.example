# =================================
# Giftee Backend Environment Config
# =================================

# Database
MONGODB_URI=mongodb://localhost:27017/giftee

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# LINE OAuth Integration
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LIFF_ID=your-liff-id
LINE_REDIRECT_URI=http://localhost:5173/auth/line/callback

# QR Code
QR_SECRET=giftee-qr-secret-change-in-production

# Email Service (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@giftee.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10

# Redis (optional - for QR invalidation cache)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# File Upload (optional)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads
